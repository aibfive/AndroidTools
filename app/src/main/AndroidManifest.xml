<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aib.androidtools">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".page.MainBActivity">
        </activity>
        <activity android:name=".page.MainAActivity"
                  android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
        <activity
            android:name=".page.swipeback.SwipeBackActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".page.decoration.HorizontalDecorationActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".page.decoration.VerticalDecorationActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".page.decoration.DecorationActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>