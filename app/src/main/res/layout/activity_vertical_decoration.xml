<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".page.decoration.VerticalDecorationActivity">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.aib.base.widget.DrawableRadioButton
            android:id="@+id/rb_null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Null"
            android:textColor="#333333"
            android:textSize="14sp"
            android:button="@null"
            android:drawableLeft="@drawable/icon_select"
            android:drawablePadding="10dp"
            android:checked="true"/>

        <com.aib.base.widget.DrawableRadioButton
            android:id="@+id/rb_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Top"
            android:textColor="#333333"
            android:textSize="14sp"
            android:button="@null"
            android:drawableLeft="@drawable/icon_select"
            android:drawablePadding="10dp"/>

        <com.aib.base.widget.DrawableRadioButton
            android:id="@+id/rb_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bottom"
            android:textColor="#333333"
            android:textSize="14sp"
            android:button="@null"
            android:drawableLeft="@drawable/icon_select"
            android:drawablePadding="10dp"/>

        <com.aib.base.widget.DrawableRadioButton
            android:id="@+id/rb_include"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Include"
            android:textColor="#333333"
            android:textSize="14sp"
            android:button="@null"
            android:drawableLeft="@drawable/icon_select"
            android:drawablePadding="10dp"/>

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>